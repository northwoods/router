{
    "name": "northwoods/router",
    "description": "A middleware, strategy based router",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "woody.gilk@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Northwoods\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Northwoods\\Router\\": "tests"
        }
    },
    "require": {
        "php": "^7.1",
        "http-interop/http-factory-discovery": "^1.2",
        "nikic/fast-route": "^1.3",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.0",
        "phpstan/phpstan": "^0.10.3",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "analyze": "phpstan analyse -l max -c phpstan.neon src tests --no-progress",
        "check": "phpcs -n",
        "test": "phpunit --testdox"
    }
}
